<div class="row">
  <div class="col-lg-2"></div>
  
<div class="col-lg-8 my-5">

  <% if(newpost._id) {%>
    <form action="/postcreate/update/<%= newpost._id %>" class="form" method="POST">
  
    <% } else {%> 
  <form action="/criapost" class="form" method="POST">
  
  <% } %> 

    <div class="form-group">
      <%- include('./messages')  %> 
      <label class="label" for="exampleInputEmail1">Título:</label>
      <input value="<%= newpost.title %>" type="text" class=" form-1 form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Digite o título" name="title">
      
    </div>
    <div class="form-group">
      <label class="label" for="exampleFormControlTextarea1">Digite seu post:</label>
      <textarea value="<%= newpost.post %>" class="form-2 form-control" id="exampleFormControlTextarea1" rows="12" name="post" ><%=newpost.post %> </textarea>
    </div>
  
    <button type="submit" class="btn btn">Criar</button>
  
  
  </form>
</div>
<div class="col-lg-2"></div>
</div>


